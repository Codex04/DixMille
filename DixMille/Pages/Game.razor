@page "/game/{GameId:int}"

@if (_game is null)
{
    <span>Oopsi, on dirait qu'il y a un probl√®me</span>
    return;
}

<div id="game">
    <MudText>Dix-Mille</MudText>

    <div id="players-list">
        @foreach (var player in _game.Players)
        {
            <MudPaper Elevation="2" Outlined="true">
                <div class="player" @onclick="@(() => OnPlayerClicked(player))">
                    <MudText>
                        @player.Name
                    </MudText>
                    <MudText>
                        @player.Score
                    </MudText>
                </div>
            </MudPaper>
        }
    </div>
</div>


