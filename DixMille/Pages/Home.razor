@page "/"

<div id="home">
    <MudText Color="Color.Primary" Typo="Typo.h3">Dix-Mille</MudText>

    <div id="navigation-buttons">
        <MudPaper Elevation="2" Class="navigation-buttons-content">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DropShadow OnClick="@NavigateToNewGamePage">Nouvelle partie</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" DropShadow Disabled="@(_lastNotFinishedGame is null)" OnClick="@NavigateToLastNotFinishedGame">Reprendre la dernière partie</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" DropShadow Disabled="@(_lastGame is null)" OnClick="@NavigateToHistory">Historique</MudButton>
        </MudPaper>
    </div>
</div>
